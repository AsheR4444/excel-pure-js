root = true

# All files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# HTML
[*.html]
indent_style = space
indent_size  = 4

# CSS
[*.css]
indent_style = space
indent_size  = 2
quote_type = single


# JAVASCRIPT
[*.js]
indent_style = space
indent_size  = 4
quote_type = single


# JSON
[*.json]
indent_style = space
indent_size  = 2
